nav.navbar.navbar-expand-lg.navbar-light
    a#navbar-brand.navbar-brand(href='/') Eventbrite
    button.navbar-toggler.ml-auto(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    .collapse.navbar-collapse
        ul.navbar-nav.ml-auto.mt-2.mt-lg-0
            li.nav-item.active
                a.nav-link.nav-link-block(href='/events')
                    | BROWSE EVENT 
                span.sr-only (current)
            li.nav-item
                a.nav-link.nav-link-block(href='#') LEARN MORE
            li.nav-item
                a.nav-link.nav-link-block(href='#') HELP
            li.nav-item.dropdown
                if currentUser
                    a#navbarDropdown.nav-link.dropdown-toggle( href=`/users/${currentUser.id}`, role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')=currentUser.name
                        .dropdown-menu(aria-labelledby='navbarDropdown')
                            a.dropdown-item(href=`/users/${currentUser.id}`) Information
                            a.dropdown-item(href=`/users/${currentUser.id}/edit`) Edit
                            a.dropdown-item(href=`/users/${currentUser.id}/favorite`) My favorites
                            a.dropdown-item(href=`/users/${currentUser.id}?_method=DELETE`) Remove Account
                            .dropdown-divider
                            a.dropdown-item.logout-btn(href='/signout') Signout
                else
                    a.nav-link.nav-link-block(href='/signin') SIGN IN
            li.nav-item
                a#create-event.nav-link.nav-link-textColor(href='/events/new') CREATE EVENT
            

          


